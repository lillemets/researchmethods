@article{di_fazio_historic_2018,
	title = {Historic {Rural} {Landscapes}: {Sustainable} {Planning} {Strategies} and {Action} {Criteria}. {The} {Italian} {Experience} in the {Global} and {European} {Context}},
	volume = {10},
	issn = {2071-1050},
