@article{piorr_spatial_2015,
	series = {Examining the {Impact} of the {Spatial} {Dimension} of {Rural} {Development} {Policies} on the example of {EU} second pillar (2007-2013)},
	title = {The spatial dimension of {Public} {Payments} for {Rural} {Development}: {Evidence} on allocation practices, impact mechanisms, {CMEF} indicators, and scope for improvement},
	volume = {59},
	issn = {1470-160X},
