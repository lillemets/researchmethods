@article{kiryluk-dryjska_fair_2014,
	title = {Fair {Division} {Approach} for the {European} {Union}’s {Structural} {Policy} {Budget} {Allocation}: {An} {Application} {Study}},
	volume = {23},
	issn = {1572-9907},
