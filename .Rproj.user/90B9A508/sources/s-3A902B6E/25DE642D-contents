@article{franks_assessment_2019,
	title = {An assessment of the landscape-scale dimensions of land based environmental management schemes offered to farmers in {England}},
	volume = {83},
	issn = {0264-8377},
	url = {http://www.sciencedirect.com/science/article/pii/S0264837718304290},
