@article{vidueira_socioeconomic_2014,
	title = {Socioeconomic {Impact} {Assessment} in {Ex} {Ante} {Evaluations}: {A} {Case} {Study} on the {Rural} {Development} {Programs} of the {European} {Union}},
	volume = {38},
