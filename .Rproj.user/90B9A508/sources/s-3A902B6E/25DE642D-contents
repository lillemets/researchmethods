@article{benedek_multiplier_2020,
	title = {The {Multiplier} {Effects} of {Food} {Relocalization}: {A} {Systematic} {Review}},
	volume = {12},
	issn = {2071-1050},
	shorttitle = {The {Multiplier} {Effects} of {Food} {Relocalization}},
