@article{mcnally_farm_2001,
	title = {Farm diversication in {England} and {Wales} - what can we learn from the farm business survey?},
	volume = {17},
	abstract = {Given the series of crises in agriculture, farm diversi"cation is an increasingly relevant strategy for farmers. Trends in various types of diversi"cation are described in England and Wales * as recorded in the Farm Business Survey. Although hirework is the most frequently reported diversi"cation activity, renting out of farm buildings is the only activity considered here where there has been a substantial increase in participation over the last 10 years. Furthermore, for most types of diversi"cation, the rate of exit is similar in magnitude to that of entry. When they are present, most types of diversi"cation make a relatively small contribution to average business income. The probability of observing diversi"cation is strongly related to farm size and type. A particular concern is that most types of diversi"cation activities considered here may be more di\$cult to pursue on small farms, especially within less favoured areas. 2001 Elsevier Science Ltd. All rights reserved.},
