@article{marquardt_why_2011,
	title = {Why {Do} {We} {Need} {Networking} for {European} {Rural} {Development} {Policies}? {The} implementation of {LEADER} and the {National} {Network} for {Rural} {Development} in {Romania} {Pourquoi} avons-nous besoin de réseaux pour les politiques de développement rural ? {La} mise en œuvre de {LEADER} et le réseau national pour le développement rural en {Roumanie} {Warum} ist {Vernetzung} wichtig für die europäischen {Politikmaßnahmen} zur {Entwicklung} des ländlichen {Raums}? {Die} {Umsetzung} von {LEADER} und des {Nationalen} {Netzwerks} für den ländlichen {Raum} in {Rumänien}},
	volume = {10},
	copyright = {© 2011 The Authors. EuroChoices © 2011 The Agricultural Economics Society and the European Association of Agricultural Economists},
	issn = {1746-692X},
	shorttitle = {Why {Do} {We} {Need} {Networking} for {European} {Rural} {Development} {Policies}?},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/j.1746-692X.2011.00196.x},
	doi = {10.1111/j.1746-692X.2011.00196.x},
	abstract = {Why Do We Need Networking for European Rural Development Policies? The implementation of LEADER and the National Network for Rural Development in Romania Networking is a political instrument intrinsically tied to social capital. Although the effects are difficult to measure, it is financially supported under the European Agricultural Fund for Rural Development (EAFRD) in the current programming period 2007–13. This article presents the most recent, partly unpublished, data on the EAFRD budget foreseen for networking. EAFRD networking measures include the establishment of the European and National Networks for Rural Development and networking activities within the well-known LEADER programme. Potential effects of networking activities are presented on the basis of findings of surveys conducted among agencies in Romania and (potential) LEADER beneficiaries in Romania, Hungary and Germany in 2008. We also discuss the importance of European-wide networking and draw conclusions on whether networking should be funded or not. Based on our findings, we conclude that: 1) cost-efficient informal networking can have a considerable impact on the implementation of policy measures for rural development; 2) financial support is important if networks need to be stimulated and channelled, and to guarantee continuity; and 3) networking is particularly important for the new member states of the European Union, where, moreover, additional attention should be paid to administrative networking.},
	language = {en},
